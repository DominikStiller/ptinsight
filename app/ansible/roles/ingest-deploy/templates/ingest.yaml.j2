---
logging:
  level: warning
  console_producer: false

kafka:
  protobuf_format: json
  bootstrap_servers:
    {{ kafka_servers | to_nice_yaml | indent(4) }}

sources:
  - type: mqtt
    broker:
      host: mqtt.hsl.fi
      port: 8883
    processor: hsl-realtime
    config:
      vehicle_types: bus,tram,train
      event_types: ars,dep,vp
