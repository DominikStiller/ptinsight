  - type: mqtt-recording
    config:
      bucket: mqtt-recordings
      key: mqtt.hsl.fi/2020-06-02T10-31-46.rec
      latency_marker_interval: 1000
      volume_scaling_factor: 4
      volume_scaling_offset_mb: 5000
    processor:
      type: hsl-realtime
      config:
        vehicle_types: bus,tram,train
        event_types: ars,dep,vp
