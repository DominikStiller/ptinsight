---
logging:
  level: warning

producer:
  type: kafka
  protobuf_format: json
  bootstrap_servers:
    {{ kafka_servers | to_nice_yaml | indent(4) }}

sources:
  - type: mqtt
    config:
      host: mqtt.hsl.fi
      port: 8883
    processor:
      type: hsl-realtime
      config:
        vehicle_types: bus,tram,train
        event_types: ars,dep,vp
