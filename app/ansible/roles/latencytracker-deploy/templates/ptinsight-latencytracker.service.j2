[Unit]
Description=PT Insight Latency Tracker
Requires=network.target
After=network.target

[Service]
Type=simple
WorkingDirectory={{ deploy_path }}/latencytracker
ExecStart={{ deploy_path }}/latencytracker/start.sh
User={{ deploy_user }}
Group={{ deploy_user }}

[Install]
WantedBy=multi-user.target
Alias=ptinsight-latencytracker.service
