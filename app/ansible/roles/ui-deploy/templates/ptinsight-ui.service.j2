[Unit]
Description=PT Insight UI
Requires=network.target
After=network.target

[Service]
Type=simple
WorkingDirectory={{ deploy_path }}/ui/backend
ExecStart={{ deploy_path }}/ui/backend/start.sh
User={{ deploy_user }}
Group={{ deploy_user }}
Environment=FLASK_ENV=production

[Install]
WantedBy=multi-user.target
Alias=ptinsight-ui.service
