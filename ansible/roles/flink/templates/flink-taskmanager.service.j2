[Unit]
Description=Apache Flink Task Manager
Documentation=https://flink.apache.org/
Requires=network.target
After=network.target

[Service]
Type=forking
SuccessExitStatus=143
ExecStart=/opt/flink/bin/taskmanager.sh start
ExecStop=/opt/flink/bin/taskmanager.sh stop
User=flink
Group=flink
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
Alias=flink-taskmanager.service
